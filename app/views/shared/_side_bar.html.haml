.side
  .side__header
    %h3.side__header__name
      = current_user.name
    %ul.side__header__icon
      %li.side__header__icon__1
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'link')
      %li.side__header__icon__2
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'link')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
   